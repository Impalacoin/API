            For t As Int16 = 0 To Floor - 1

                GROUPBX = New System.Windows.Forms.GroupBox

                GROUPBX.Height = RowSizeP
                GROUPBX.Width = Panel1.Width - 20
                If XPAND = 1 Then
                    GROUPBX.Location = New System.Drawing.Point(0, (RowSizeP + NewGTop) * t + 10)
                Else
